html    
    head 
        script(src="https://kit.fontawesome.com/6ca44ad678.js" crossorigin="anonymous")
        link(rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css")
        script(src="https://unpkg.com/swiper@8/swiper-bundle.min.js")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;1,300;1,900&display=swap" rel="stylesheet")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(<link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    style
        include ./styles/styles.css

    //- h1 Currently Spinning
    .container-fluid

    div(id="myCarousel" class="carousel slide  carousel-fade pointer-event" data-bs-ride="carousel" )
        div(id="carousel" class="carousel-inner" )

        button(id="carouselNext" class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev") 
            //- span(class="carousel-control-prev-icon")
            span(class="visually-hidden") Previous 
     
        button(id="carouselPrev" class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next") 
            //- span(class="carousel-control-next-icon" )
            span(class="visually-hidden") Next  

    .container(id="currentlyPlaying")
        div.swiper
            div.swiper-wrapper
                .image-wrapper.swiper-slide
                    img(id='albumart')
                    span#favorite.unliked
                        i(class="fa fa-light fa-heart")
                .swiper-slide 
                    //- Need to implement in the future
                    //- form
                    //-     .toggle 
                    //-         input(type="radio" name="searchBy" value="track" id="trackTrack" checked=true)
                    //-         label(for="trackTrack") Track
                    //-         input(type="radio" name="searchBy" value="album" id="albumName")
                    //-         label(for="albumName") Album
                    //-         input(type="radio" name="searchBy" value="artist" id="artistArtist")
                    //-         label(for="artistArtist") Artist
                    //-         input(type="radio" name="searchBy" value="playlist" id="playlistName")
                    //-         label(for="playlistName") Playlist
                    //-         input(type="radio" name="searchBy" value="genre" id="genreType")
                    //-         label(for="genreType") Genre
                    div#searchWrapper 
                        input(type="text" name="searchBar" id="searchBar" placeholder="Search Track")
                    div#searchResults.container
 
        div(id='playbackControls')
            h2#trackTitle
            h4#artistName
            .range-wrap#wrap
                span#current-time.time 0:00
                input#seekSlider(type="range" name="seek" min="0" step="1000" list="labels")
                .range-value#rangeV
                span#duration.time
                        
            .container
                button(className="btn-spotify" id='prev') 
                    span(class="material-icons md-36") skip_previous
                button(id='togglePlay')
                    span(class="material-icons md-48") play_circle_filled
                button(id='stop')
                    span(class="material-icons md-48") stop_circle
                button(className="btn-spotify" id='next') 
                    span(class="material-icons md-36") skip_next
        
    include scripts